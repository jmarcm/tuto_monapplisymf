{% extends "base.html.twig" %}

{# On peut préserver les éléments contenus dans le layout principal #}
{% block title %}{{ parent() }}Page de bienvenue{% endblock %}

{% block body %}
	<h2>Bienvenue à {{ prenom }} {{ nom }}</h2>

	{# Test de l'age du participant #}
	{% if age > 60 %}
		<h3>Vous êtes un senior</h3>
	{% else %}
		<h3>Vous êtes un junior</h3>
	{% endif %}

	{{ messageHtml | raw }}

	{{ dump(monTableau) }}

	{# utilisation courante pour un tableau #}
	{% for key,value in monTableau %}
		<p>{{ key }} : {{ value }}</p>
	{% endfor %}
    
    <button>
        <a href="{{ path('test') }}" title="Vers test">Vers Test</a>
    </button>
{% endblock %}
